{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    "target": "es2016",
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
