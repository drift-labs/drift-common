{
	"name": "@drift-labs/common",
	"version": "1.0.37",
	"description": "Common functions for Drift",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"browser": {
		"./lib/utils/logger.js": "./lib/utils/logger.browser.js"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/drift-labs/drift-common/tree/master/common-ts"
	},
	"homepage": "https://www.drift.trade/",
	"keywords": [
		"drift-labs",
		"drift",
		"perps"
	],
	"author": "Drift Labs",
	"dependencies": {
		"@drift-labs/sdk": "^2.158.0-beta.0",
		"@slack/web-api": "6.4.0",
		"@solana/spl-token": "^0.4.14",
		"@solana/web3.js": "1.98.0",
		"bcryptjs-react": "2.4.6",
		"cerializr": "3.1.4",
		"dotenv": "^17.2.2",
		"immer": "10.0.3",
		"ioredis": "5.4.1",
		"isomorphic-ws": "^5.0.0",
		"localstorage-memory": "1.0.3",
		"rxjs": "7.8.2",
		"tiny-invariant": "1.3.1",
		"tweetnacl": "1.0.3",
		"winston": "3.13.0",
		"winston-slack-webhook-transport": "2.3.5"
	},
	"peerDependencies": {
		"@drift-labs/sdk": "^2.158.0-beta.0",
		"@solana/web3.js": "1.98.0"
	},
	"scripts": {
		"build": "yarn clean && tsc",
		"build:minify": "node build-browser.js && node build-node.js",
		"build:minify:browser": "node build-browser.js",
		"build:minify:node": "node build-node.js",
		"prepublishOnly": "yarn build",
		"watch": "yarn clean && tsc --watch",
		"build-dual": "yarn clean && tsup",
		"watch-dual": "yarn clean && tsup --watch",
		"clean": "rm -rf lib",
		"test": "npx mocha -r ts-node/register 'tests/**/*.ts' --ignore 'tests/drift/**/*.ts' --exit",
		"test:drift": "npx mocha -r ts-node/register 'tests/drift/**/*.ts' --exit",
		"test:ci": "mocha -r ts-node/register 'tests/**/*.ts' --ignore 'tests/drift/**/*.ts' --silent",
		"test:debug": "node --inspect-brk --inspect=2234 node_modules/.bin/jest --runInBand",
		"update-jup-errors": "node src/scripts/update-jup-error-codes.js",
		"update-drift-errors": "node src/scripts/update-drift-error-codes.js",
		"circular-deps": "bunx madge --circular --circular --extensions ts,tsx src",
		"build-and-pack": "bun run build && npm pack",
		"update-sdk": "node scripts/update-sdk.js"
	},
	"directories": {
		"lib": "lib"
	},
	"exports": {
		".": "./lib/index.js",
		"./clients": "./lib/clients/index.js"
	},
	"files": [
		"lib"
	],
	"engines": {
		"node": "^24.x.x"
	},
	"devDependencies": {
		"@coral-xyz/anchor": "0.29.0",
		"@jest/globals": "29.3.1",
		"@types/mocha": "10.0.4",
		"@types/sinon": "^17.0.4",
		"buffer": "^6.0.3",
		"chai": "4.3.10",
		"crypto-browserify": "^3.12.1",
		"encoding": "0.1.13",
		"esbuild": "0.27.2",
		"jest": "29.7.0",
		"madge": "^8.0.0",
		"mocha": "10.2.0",
		"os-browserify": "^0.3.0",
		"path-browserify": "^1.0.1",
		"process": "^0.11.10",
		"sinon": "^21.0.0",
		"stream-browserify": "^3.0.0",
		"ts-node": "10.9.1",
		"typescript": "5.4.5",
		"vm-browserify": "^1.1.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"@solana/web3.js": "1.98.0",
		"@solana/errors": "2.0.0-preview.4",
		"@solana/codecs-data-structures": "2.0.0-preview.4"
	}
}
