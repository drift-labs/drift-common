{
	"compilerOptions": {
		"declaration": true,
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"paths": {
			"@drift-labs/sdk": ["../protocol/sdk"]
		},
		"outDir": "./lib"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
