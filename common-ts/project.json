{
	"name": "common",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"command": "bun i && bun link @drift-labs/sdk && bun run build",
				"cwd": "drift-common/common-ts"
			},
			"dependsOn": [
				{
					"projects": "sdk",
					"target": "build"
				},
				{
					"projects": "sdk",
					"target": "link"
				}
			],
			"outputs": [
				"{workspaceRoot}/dist"
			]
		},
		"link": {
			"executor": "nx:run-commands",
			"options": {
				"command": "bun link",
				"cwd": "drift-common/common-ts"
			},
			"dependsOn": [
				"build"
			]
		}
	}
}