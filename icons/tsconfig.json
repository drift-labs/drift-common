{
  "include": [
    "src/index.ts",
    "src/types.d.ts",
    "src/icons"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es5", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react", 
    "module": "ESNext",  
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": false
  }
    
